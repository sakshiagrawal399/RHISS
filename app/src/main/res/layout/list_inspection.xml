<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="horizontal">

    <rural.rhiss.Util.TextViewCustom
        android:id="@+id/textViewHouseStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/darks_grey"
        android:padding="4dp"
        android:text="" />

    <rural.rhiss.Util.TextViewCustom
        android:id="@+id/textViewHouseStatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewHouseStatus"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/button"
        android:padding="4dp"
        android:text="Uploaded and yet to be verified"
        android:textColor="@color/app_color" />

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/textViewHouseStatus1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@color/app_color"
        android:gravity="center"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>

